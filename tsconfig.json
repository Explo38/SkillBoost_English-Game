{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "es2015"],
    "jsx": "react", // Ajout de la prise en charge du JSX
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "composite": true,  // Important pour g√©rer les projets composites
    "module": "commonjs"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ]
  
}
